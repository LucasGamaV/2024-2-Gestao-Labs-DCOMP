{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flutter Web (Chrome on port 7000)",
            "request": "launch",
            "type": "dart",
            "program": "frontend/lib/main.dart", // Adjust this if your entry point is different
            "args": [
              "-d", "chrome",
              "--web-port", "7000"
            ]
        },
        {
            "name": "Flutter Linux",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "args": [
                "-d", "linux"
            ]
        },
        {
            "name": "frontend",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "frontend (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "frontend (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        }
    ]
}